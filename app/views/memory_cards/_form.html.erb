<div class="marginTopMax"></div>
<div class="row">
    <div class="well col-md-8 col-md-offset-2">
        <%= form_for(@memory, html: {multipart: true}) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        
        <span class="picture">
            <%= f.file_field :card, accept: "image/jpeg, image/gif, image/png" %>
        </span>
        <%= image_tag(@memory.card.url(:medium)) %>
        <%= f.submit(@memory.new_record? ? "Add Memo Card" : "Delete Memo Card", class: "btn btn-success") %>
        <% end %>
    </div>
</div>